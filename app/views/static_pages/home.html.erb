<% provide(:title, 'Home') %>

<% content_for :HomePage do %>
<div class="chalkboard-wrapper">
<div class="container">
    <div class="row">
        <div class="col-md-7 col-sm-7">
            <h1>Better Skills Start Here!</h1>
            <h2>Find a coach</h2>
            <p class='chalkboard-headline'>We help thousands of students get better sports skills. You're next.</p>
        </div>

      <% if !signed_in? %>
        <div class="col-md-4 col-sm-4 col-md-offset-1 col-sm-offset-1 signup-form" id="accountInfo">

            <legend>Join Now!</legend>
                 <div>
                        <p><%= link_to "Student Sign Up", new_student_path, class: "btn btn-primary btn-lg" %>
                           &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                           <%= link_to "Coach Sign Up", coach_signup_path, class: "btn btn-primary btn-lg" %>
                        </p>
                 </div>
            
        </div>
      <% end %>
    </div>
</div>
</div>

<!-- Section2 -->
<div class="gray-wrapper inner-container">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h3>Coaches at a glance</h3>
          <hr />
        <div class="row tutor-wrapper">
          <div id="tabs">
              <ul>
                <% @coaches.each do |coach| %>
                <li><a href="#tabs-<%= coach.id %>"><%= coach.name%></a></li>
                <% end %>
              </ul>

              <% @coaches.each do |coach| %>
              <div id="tabs-<%= coach.id %>" style="text-align:left">
                <h4>Email:</h4>
                <p><%= coach.email %></p>
                <h4>Subject:</h4>
                <p><%= coach.subject %></p>
              </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
