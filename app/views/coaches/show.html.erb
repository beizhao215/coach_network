
<% provide(:title, 'Coach') %>



<br><br><br>show coach information
<div>
	<%= @coach.name %>, <%= @coach.email %>, <%= @coach.subject %>, 
	<%= @coach.location %>, <%= @coach.self_introduction %>, <%= @coach.course_introduction %>
	<div class = "span6">
		<% if @coach.groups.any? %>
		    <div class="groups">
		      <%= render @groups %>
		    </div>
		<% end %>
	</div>
	<% if current_coach?(@coach) %>
		<br><br><br><br>
		<span><%= link_to "Start New Group", new_group_path %></span>
	<% end %>
</div>
