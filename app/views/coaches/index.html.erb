<% provide(:title, 'Coach') %>

<h1>All coaches</h1>

<%= will_paginate %>

<ul>
  <% @coaches.each do |coach| %>
    <li class="coach">
      <%= link_to coach.name, coach %>
	  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	  <%= coach.subject %>
	  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	  <%= coach.location %>
	  <% if !current_coach.nil? %>
	  	 <% if current_coach.admin? && !current_coach?(coach) %>
	    	<%= link_to "delete", coach, method: :delete,
	                                   data: { confirm: "You sure?" } %>
		 <% end %>							   
	  <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
