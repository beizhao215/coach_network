<% if @coach %>
	<% if @coach.errors.any? %>
  		<div id="error_explanation">
    		<div class="alert alert-error">
      		  	The form contains <%= pluralize(@coach.errors.count, "error") %>.
    		</div>
    		<ul>
    		<% @coach.errors.full_messages.each do |msg| %>
      	  		<li>* <%= msg %></li>
    		<% end %>
    		</ul>
  	    </div>
	<% end %>
<% end %>

