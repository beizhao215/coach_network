<% provide(:title, 'Group') %>

<h1>Update group information</h1>

<div>
  <div>
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, class:"input-xxlarge", height:"400px"; %>
	  
      <%= f.label :location %>
      <%= f.text_field :location %>
	  
      <%= f.label :schedule %>
      <%= f.text_field :schedule %>

	  

      <%= f.submit "Save changes" %>
    <% end %>
  <div class="delete_group">
	<% if coach_signed_in? %>
		<% if current_coach.id == @group.coach_id %>
			<%= link_to "edit", edit_group_path(@group), class: "btn btn-primary btn-lg" %>
			<br><br><br><br><br><br>
			<%= link_to "Delete Group", @group, method: :delete,
	                                  data: { confirm: "You sure?" } %>
		<% end %>
	<% end %>
  </div>
  </div>
</div>