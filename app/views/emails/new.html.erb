<% provide(:title, 'Email') %>

<h1>Compose email</h1>
<div class="row">
  
    <%= form_for(@email) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Send" %>
    <% end %>
  </div>
</div>
